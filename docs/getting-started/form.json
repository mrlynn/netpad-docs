{
    "name": "Customer Feedback",
    "slug": "customer-feedback",
    "description": "A quick feedback form with conditional follow-up for low ratings",
    "fieldConfigs": [
      {
        "path": "name",
        "label": "Your Name",
        "type": "short_text",
        "included": true,
        "required": true,
        "placeholder": "Enter your full name"
      },
      {
        "path": "email",
        "label": "Email Address",
        "type": "email",
        "included": true,
        "required": true,
        "placeholder": "Enter your email address"
      },
      {
        "path": "rating",
        "label": "How would you rate your experience?",
        "type": "dropdown",
        "included": true,
        "required": true,
        "options": [
          { "label": "5 - Excellent", "value": "5" },
          { "label": "4 - Good", "value": "4" },
          { "label": "3 - Okay", "value": "3" },
          { "label": "2 - Poor", "value": "2" },
          { "label": "1 - Terrible", "value": "1" }
        ]
      },
      {
        "path": "feedback",
        "label": "Tell us more",
        "type": "long_text",
        "included": true,
        "placeholder": "What's on your mind?"
      },
      {
        "path": "recommend",
        "label": "Would you recommend us to a friend?",
        "type": "dropdown",
        "included": true,
        "required": true,
        "options": [
          { "label": "Yes, definitely", "value": "yes" },
          { "label": "Maybe", "value": "maybe" },
          { "label": "No", "value": "no" }
        ]
      },
      {
        "path": "improvement_feedback",
        "label": "What could we do better?",
        "type": "long_text",
        "included": true,
        "placeholder": "We'd love to improve...",
        "conditionalLogic": {
          "action": "show",
          "logicType": "any",
          "conditions": [
            { "field": "rating", "operator": "equals", "value": "2" },
            { "field": "rating", "operator": "equals", "value": "1" }
          ]
        }
      }
    ],
    "conversational": {
      "enabled": true,
      "greeting": "Hey! Thanks for taking a moment to share your feedback. Let's start with your name‚Äîwhat should I call you?",
      "closing": "Thanks so much for your feedback! We really appreciate you taking the time. Have a great day! üôè",
      "persona": {
        "style": "friendly",
        "tone": "Warm and appreciative",
        "behaviors": [
          "Thank users for their time",
          "Acknowledge both positive and negative feedback gracefully",
          "Keep responses brief and conversational"
        ],
        "restrictions": [
          "Don't be defensive about negative feedback",
          "Don't make promises about changes"
        ]
      },
      "objective": "Collect honest customer feedback about their experience",
      "topics": [
        {
          "id": "contact_info",
          "name": "Contact Information",
          "description": "Capture who is providing feedback",
          "priority": "required",
          "depth": "surface",
          "fields": ["name", "email"]
        },
        {
          "id": "feedback",
          "name": "Feedback Details",
          "description": "Gather their rating and thoughts",
          "priority": "required",
          "depth": "moderate",
          "fields": ["rating", "feedback", "improvement_feedback", "recommend"]
        }
      ],
      "limits": {
        "maxTurns": 12,
        "maxDuration": 5,
        "minConfidence": 0.8
      }
    },
    "settings": {
      "submitButtonText": "Submit Feedback",
      "successMessage": "Thank you for your feedback! We really appreciate it."
    }
  }